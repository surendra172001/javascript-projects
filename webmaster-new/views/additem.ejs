<%- include("partials/header") -%>


 <div class="d-flex flex-row-reverse p-3 text-white" style="background-color: #2a1a30;">
    <div class="p-2 text-center" style="border-radius: 10px; width : 10%; background:transparent; padding-bottom : 0px;"><%=owner.name%></div>
</div>
<div class="slider_area">
    <div class="single_slider  d-flex align-items-center slider_bg_1">
        <div class="container">
            <div class="row align-items-center justify-content-center">
                <div class="col">
                    
                    <div class="slider_text text-center justify-content-center">
                        <div style="left: 50px; font-size: 40px; color: aliceblue; padding-bottom: 8%; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;">
                            ADD ITEM
                        </div>
                        <div class="edit_form w-50" style="background-color: rgb(27, 27, 26)"><br>
                            <form action="/<%=owner._id%>/additem" method="POST">
                                
                                    <div class="col">
                                        <div class="form-group">
                                            <label style="color: aliceblue; font-size: 24px; padding-right: 75%">Item Name</label>
                                            <input type="text" name="itemname" class="form-control" placeholder="e.g. soap" required="required">
                                        </div>
                                        <div class="form-group">
                                            <label style="color: aliceblue; font-size:24px; padding-right: 77%">Expiryperiod</label>
                                            <input type="text" name="expiryperiod" class="form-control" placeholder="e.g. 3 months" required="required">
                                        </div>
                                        <div class="form-group">
                                            <label style="color: aliceblue; font-size:24px; padding-right: 79%">Quantity</label>
                                            <input type="text" name="quantity" class="form-control" placeholder="e.g. 4" required="required">
                                        </div>
                                        <div class="form-group">
                                            <label style="color: aliceblue; font-size:24px; padding-right: 74%">Description</label>
                                            <input type="text" name="description" class="form-control" placeholder="describe item.." required="required">
                                        </div>

                                    </div><br><br>
                                    <button type="submit" style="width: 130px; height: 40px; background-color: black; color: aliceblue; border-radius: 40px;"> ADD </button>
                                
                            </form><br>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<%- include("partials/footer") -%>